<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#000000"
                android:endColor="#000000"
                android:angle="180" />
            <stroke
                android:width="3dip"
                android:color="#000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/colorFloralWhite"
                android:endColor="@color/colorFloralWhite"
                android:angle="180" />
            <stroke
                android:width="3dip"
                android:color="@color/colorFloralWhite" />
            <corners android:radius="10dip" />
        </shape>
    </item>
</selector>