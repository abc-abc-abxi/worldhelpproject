<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity003"
    >
    <TextView
        android:id="@+id/text_01"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#EBEBEB"
        android:gravity="center"
        android:text="手机短信验证"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/telNumber"
        android:layout_width="375dp"
        android:layout_height="59dp"
        android:layout_below="@id/text_01"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/input_bgd"
        android:hint="请输入手机号"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/liLout"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_below="@id/telNumber"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/edit_Tel"
            android:layout_width="250dp"
            android:layout_height="59dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_bgd"
            android:hint="填写验证码"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>

        <Button
            android:id="@+id/sendMassage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_Tel"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_01"
            android:text="获取验证码"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liLout"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="50dp"
        android:gravity="center">

    <Button
        android:id="@+id/nextOne"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_01"
        android:text="下一步"
        android:textSize="20dp"
        android:gravity="center"/>
    </LinearLayout>


</RelativeLayout>