<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity006">
        <TextView
            android:id="@+id/text__01"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#EBEBEB"
            android:gravity="center"
            android:text="新用户注册"
            android:textSize="30dp" />

        <LinearLayout
            android:id="@+id/liLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text__01"
            android:gravity="center">

            <EditText
                android:id="@+id/qusetion001"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/input_bgd"
                android:hint="手机号："
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:textStyle="italic"
                android:gravity="center"/>

            <Button
                android:id="@+id/getVerificationCode"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="获取验证码"
                android:textSize="14sp"
                android:background="@drawable/btn_01"
                android:layout_marginLeft="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="7dp"
                />
        </LinearLayout>

        <EditText
            android:id="@+id/quesetion02"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/liLayout01"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_bgd"
            android:hint="昵称："
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>
        <EditText
            android:id="@+id/quesetion03"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/quesetion02"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_bgd"
            android:hint="性别："
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>
        <EditText
            android:id="@+id/quesetion04"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/quesetion03"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_bgd"
            android:hint="出生年月："
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>
        <EditText
            android:id="@+id/quesetion05"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/quesetion04"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_bgd"
            android:hint="密码："
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>
        <EditText
            android:id="@+id/quesetion06"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/quesetion05"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_bgd"
            android:hint="再次输入密码："
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>
        <EditText
            android:id="@+id/quesetion07"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/quesetion06"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_bgd"
            android:hint="短信验证码："
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>
    <LinearLayout
        android:id="@+id/liLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quesetion07">
        <EditText
            android:id="@+id/quesetion08"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_bgd"
            android:hint="验证码："
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>
        <Button
            android:id="@+id/getPicProve"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="图片验证码"
            android:textSize="20dp"
            android:layout_marginTop="14sp"
            android:background="@drawable/btn_01"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="7dp"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_below="@id/liLayout02"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">

            <Button
                android:id="@+id/dtMine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_01"
                android:text="注册"
                android:textSize="20dp"

                />

        </LinearLayout>
</RelativeLayout>