<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity018">

    <TextView
        android:id="@+id/titleActivity18"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EBEBEB"
        android:gravity="center"
        android:text="历史记录"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/liLay018_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/titleActivity18"
        android:background="#DBDBDB">

        <ImageView

            android:id="@+id/img_Persona18_l"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pic"
            android:padding="8dp"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_name_18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn_next"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="王大川"
                android:textSize="20sp" />

            <TextView
                android:text="账号：1803382990"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/liLay018_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liLay018_00"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/btn_next">
        <TextView
            android:id="@+id/btnHistory18_mission1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="任务1:帮交作业"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/btnHistory18_time1"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2019.7.7"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liLay018_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liLay018_0"
        android:background="@drawable/btn_next"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/btnHistory18_mission2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="任务2"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/btnHistory18_time2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="完成时间"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liLay018_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/liLay018_1"
        android:background="@drawable/btn_next"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/btnHistory18_mission3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="任务3"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/btnHistory18_time3"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="完成时间"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>