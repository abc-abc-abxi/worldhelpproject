<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity005">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_01"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#EBEBEB"
            android:gravity="center"
            android:text="回答密保问题验证"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/qstionText01"
            android:layout_marginTop="80dp"
            android:layout_width="375dp"
            android:layout_height="59dp"
            android:text="密保问题一:"
            android:textSize="14sp"
            android:gravity=""
            android:paddingLeft="20dp"
            />

        <EditText
            android:id="@+id/qusetion01"
            android:layout_width="375dp"
            android:layout_height="59dp"
            android:layout_below="@id/qstionText01"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_bgd"
            android:hint="答案一："
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>
        <TextView
            android:id="@+id/qstionText02"
            android:layout_marginTop="40dp"
            android:layout_width="375dp"
            android:layout_height="59dp"
            android:text="密保问题二:"
            android:textSize="14sp"
            android:gravity=""
            android:paddingLeft="20dp"
            android:layout_below="@id/qusetion01"
            />

        <EditText
            android:id="@+id/quesetion02"
            android:layout_width="375dp"
            android:layout_height="59dp"
            android:layout_below="@id/qstionText02"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/input_bgd"
            android:hint="答案二："
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"/>
        <LinearLayout
            android:layout_below="@id/quesetion02"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center">

            <Button
                android:id="@+id/determine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_01"
                android:text="确定"
                android:textSize="20dp"
                />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>