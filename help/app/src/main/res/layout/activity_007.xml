<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorFloralWhite">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--发布任务 按钮-->
            <Button
                android:id="@+id/btnPublishTask"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="发布任务"
                android:background="@drawable/shape1"
                android:textColor="@drawable/shape2"
                ></Button>
            <!--接受任务 按钮-->
            <Button
                android:id="@+id/btnAcceptTask"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/button1"
                android:text="接受任务"
                android:background="@drawable/shape1"
                android:textColor="@drawable/shape2"></Button>
        </LinearLayout>
        <!--已发布及接受未完成任务 按钮-->
        <Button
            android:id="@+id/btnPublishedAndAcceptedUnfinishedTask"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button2"
            android:text="已发布及接受未完成任务"
            android:background="@drawable/shape1"
            android:textColor="@drawable/shape2"></Button>
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:id="@+id/button4L"
            android:layout_weight="1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">
            <!--关注的人 按钮-->
            <ImageButton
                android:id="@+id/iBtnConcern"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/down1"
                android:scaleType="centerInside"
                android:background="#000000"></ImageButton>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="关注的人"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button5L"
            android:layout_weight="1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">
            <!--附近的人 按钮-->
            <ImageButton
                android:id="@+id/iBtnNearby"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/down2"
                android:scaleType="centerInside"
                android:background="#000000"></ImageButton>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="附近的人"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/button6L"
            android:layout_weight="1"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">
            <!--我 按钮-->
            <ImageButton
                android:id="@+id/iBtnI"
                android:layout_gravity="center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@mipmap/down3"
                android:scaleType="centerInside"
                android:background="#000000"></ImageButton>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="我"></TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
